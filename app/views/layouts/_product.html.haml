.col-sm-4.col-md-3.proto-content
  - if user_signed_in? && current_user.id == product.user_id
    .dropdown.drop_menu_location
      %button.btn.btn-default{ id: "dropdownMenu", type: "button",  data: { toggle: "dropdown" } } ACTION
      %ul.dropdown-menu{ aria: { labelledby: "dropdownMenu1" } }
        %li
          = link_to "Delete", "/users/#{product.user_id}/products/#{product.id}"  ,rel: "nofollow", data: {method: "delete"}
        %li
          = link_to "Edit"  , edit_user_product_path(current_user,product)



  .thumbnail
    = link_to user_product_path(current_user, product) do
      = image_tag product.images.main.first.image
      .caption
        %h3= product.title
        .proto-meta
          .proto-user
            = link_to "by #{ product.user.name }"
          .proto-posted
            = product.created_at.strftime('%m/%d/%Y')
        %ul.proto-tag-list.list-inline
          %li
            %a{ href: "#", class: "btn btn-default"} iPad
          %li
            %a{ href: "#", class: "btn btn-default" } wireframe

