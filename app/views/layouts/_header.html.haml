.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-responsive-collapse')
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to root_path, class: 'navbar-brand' do
      = image_tag('logo.png', alt: 'PROTO TYPE - SHARE THE PROTOTYPE', height: '36px')
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ aria: { expanded: true }, data: { toggle: :dropdown }, href: "#", role: "button" }
              = current_user.name
              %span.caret
            %ul.dropdown-menu{ role: "menu" }
              %li
                = link_to "Edit", edit_user_path(current_user)
              %li
                = link_to "Logout", destroy_user_session_path, method: :delete
              %li
                = link_to "MyPage", user_path(current_user)
          %li
            .btn.btn-primary.navbar-btn
              = link_to "New Proto", new_product_path
        - else
          %ul.nav.navbar-nav.navbar-right
            %li
              .btn.btn-primary.navbar-btn
                = link_to "Get Started", new_user_session_path

