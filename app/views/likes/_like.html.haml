- if user_signed_in?
  - if @product.like_user(current_user)
    = button_to user_product_like_path(@user, @product, @like), method: :delete, id: "js-like-button", class: "btn btn-default decrement-button", data: { disable_with: "sending..." }, remote: true do
      = image_tag("icon_heart_red.svg")
      %span
        #like-sum
          = likes_counter(@likes)
  - else
    = button_to user_product_likes_path(@user, @product), id: "js-like-button", class: "btn btn-default", data: { disable_with: "sending..." }, remote: true do
      = image_tag("icon_heart.svg")
      %span
        #like-sum
          = likes_counter(@likes)
- else
  = image_tag("icon_heart_red.svg")
  %span
    #like-sum
      = likes_counter(@likes)

