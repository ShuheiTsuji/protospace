.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{href: "#"}
          = image_tag(@product.user.avatar, alt: "64Ã—64", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @product.title
          .proto-user
            = link_to "by #{@product.user.name}"
            %span.degree= @product.user.profile

    .col-md-6.text-right
    #js-like-buttons
      = render 'likes/like'

  .row
    .col-md-9
      = image_tag("#{@product.images.main.first.image}", class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag("#{@product.images.sub.first.image}", class: 'img-responsive')
        %li.list-group-item
          = image_tag("#{@product.images.sub.second.image}", class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @product.catch_copy
    .col-md-6
      %h4 Concept
      %p= @product.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num= "(#{@comments.count})"
      - if @comments
        #comments
          = render partial: 'comments/comment', collection: @comments
  - if user_signed_in?
    .col-md-8
      = form_for [@user, @product, @comment], remote: true do |f|
        %h4 Write a comment
        .row
          .form-group.col-md-10
            = f.text_area :text, placeholder: "Your comments", rows: "3", cols: "60", id: 'comment_field'
          .form-group.col-md-2
            = f.submit 'Comment', class: 'btn btn-primary'

