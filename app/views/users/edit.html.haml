= render "layouts/error", danger: current_user
.container.user-new{action: ""}
  = form_for(current_user) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, autofocus: true, placeholder: "Username"
          .user-email
            = f.email_field :email, autofocus: true, placeholder: "E-Mail"
          .user-password
            = f.password_field :password, autocomplete: "off", placeholder: "Password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, autofocus: true, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, autofocus: true, placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, autofocus: true, placeholder: "works"
      .row.text-center.user-btn
        = f.submit :save, class: "btn btn-lg btn-primary btn-block", data: { disable_with: "sending..." }

